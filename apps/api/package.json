{
  "name": "shortlink-api",
  "version": "1.0.0",
  "description": "API serverless para crear y gestionar enlaces cortos (acortador de URL) construida con AWS Lambda, DynamoDB y TypeScript.",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:dev": "serverless deploy --stage dev --verbose",
    "deploy:prod": "serverless deploy --stage prod --verbose",
    "lint": "pnpm -r run lint",
    "prettier": "prettier --write ."
  },
  "keywords": [
    "serverless",
    "aws-lambda",
    "dynamodb",
    "typescript",
    "url-shortener",
    "api"
  ],
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.975.0",
    "@aws-sdk/lib-dynamodb": "3.975.0",
    "@middy/core": "7.0.2",
    "@middy/http-error-handler": "7.0.2",
    "@middy/http-json-body-parser": "7.0.2",
    "@shortlink/core": "workspace:*",
    "jest": "30.2.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.160",
    "@types/jest": "30.0.0",
    "@types/node": "25.0.10",
    "serverless-domain-manager": "8.0.0",
    "ts-jest": "29.4.6"
  }
}
